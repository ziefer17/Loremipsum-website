                <div class="welcome-hero-serch-box" style="margin-left:100px;">
                    <div class="searchform-property">
                        <form class="searchform" action="#" method="get">
                            <input type="hidden" name="post-type" value="property" />
                            <div class="field-group">
                                <div class="col-20 input-form">
                                    @Html.TextBox("valueSearch", ViewBag.CurrentSearchTerm as string, new { @class = "form-control", placeholder = "Địa chỉ, thông tin, tên người dùng,.. " })
                                </div>
                                <div class="col-20 input-form form-property_location">
                                    
                                    <select class="form-control" id="property_type" name="property_type">
                                        <option value="0">-Khu vực-</option>
                                        <option>Quận 1</option>
                                        <option>Quận 2</option>
                                        <option>Quận 3</option>
                                        <option>Quận 4</option>
                                        <option>Quận 5</option>
                                        <option>Quận 6</option>
                                        <option>Quận 7</option>
                                        <option>Quận 8</option>
                                        <option>Quận 9</option>
                                        <option>Quận 10</option>
                                    </select>
                                </div>
                                <div class="col-20 input-form form-property_type">
                                    @*@Html.DropDownList("searchType", (SelectList)ViewBag.listType, "All", new {@class="form-control",placeholder="Loại"})*@
                                    <select class="form-control" id="property_type" name="property_type">
                                        <option value="0">-Loại-</option>
                                        <option value="apartment-for-rent-in-hcmc" data-id="16">Chung cư</option>
                                        <option value="house-for-rent-in-ho-chi-minh-city" data-id="34">Nhà ở</option>
                                        <option value="serviced-apartment-ho-chi-minh-city" data-id="24">Office</option>
                                        <option value="villa-for-rent-in-ho-chi-minh-city" data-id="35">Villa</option>
                                    </select>
                                </div>
                                <div class="col-20 input-form form-clda" style="display: none;">
                                    <select class="form-control" id="child_location" name="child_location">
                                        <option value="0">-Buildings-</option>
                                        <option value="city-garden">City Garden</option>
                                        <option value="sunwah-pearl-apartment">Sunwah Pearl</option>
                                        <option value="vinhomes-central-park">Vinhomes Central Park</option>
                                        <option value="soho-residence-apartment">Soho Residence</option>
                                        <option value="the-marq-district-1-for-rent">The MarQ</option>
                                        <option value="vinhomes-golden-river-apartment">Vinhomes Golden River</option>
                                        <option value="zenity-apartment-for-rent">Zenity</option>
                                        <option value="apartment-for-rent-in-an-phu">An Phu</option>
                                        <option value="apartment-for-rent-in-thao-dien">Thao Dien</option>
                                        <option value="apartment-for-rent-in-thu-thiem">Thu Thiem</option>
                                        <option value="diamond-island-apartments">Diamond Island</option>
                                        <option value="feliz-en-vista-for-rent">Feliz En Vista</option>
                                        <option value="masteri-millennium-for-rent">Masteri Millennium</option>
                                        <option value="the-goldview-apartment-for-rent">The Goldview</option>
                                        <option value="the-tresor-apartment-rent">The Tresor</option>
                                        <option value="phu-my-hung-apartment">Phu My Hung</option>
                                        <option value="saigon-south-apartment-for-rent">Saigon South Residences</option>
                                        <option value="sunrise-riverside-apartment-for-rent">Sunrise Riverside</option>
                                        <option value="vinhomes-grand-park">Vinhomes Grand Park</option>
                                        <option value="garden-gate-apartment">Garden Gate</option>
                                    </select>
                                    <script text="text/script">
                                        (function ($) {
                                            function ActionForm() {
                                                $('.form-clda').hide();
                                                $('#property_type').change(function () {
                                                    if ($(this).val() == 'apartment-for-rent-in-hcmc') {
                                                        $('.form-clda').show();
                                                        $('.form-clda option[value="0"]').text('-Buildings-');
                                                    } else {
                                                        $('.form-clda').hide();
                                                        $('#child_location').val("0").change();
                                                    }
                                                });
                                                $('#child_location').change(function () {
                                                    if ($(this).val() != '0') {
                                                        $('#child_location').attr('name', 'property_location');
                                                    } else {
                                                        $('#child_location').attr('name', 'child_location');
                                                    }
                                                })
                                            }
                                            $(document).ready(ActionForm);
                                            $(document).ajaxComplete(function () {
                                                ActionForm()
                                            });
                                        })(jQuery);
                                    </script>
                                </div>
                                <div class="col-20 input-form">
                                    @*@Html.DropDownList("searchList", (SelectList)ViewBag.listList, "All", new { @class = "form-control", placeholder = "Trạng thái" })*@
                                    <select class="form-control" name="property_listing">
                                        <option value="0">-Trạng thái-</option>
                                        <option value="mua">Mua</option>
                                        <option value="cho-thue">Cho thuê</option>                                        
                                    </select>
                                </div>
                                <div class="col-20 input-form">
                                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css">
                                    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
                                    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
                                    <script text="text/script">
                                        (function ($) {
                                            $('.selectpicker').selectpicker();
                                            $('.selectpicker').selectpicker('selectAll');
                                            $('.selectpicker').selectpicker('deselectAll');
                                        })(jQuery);
                                    </script>
                                </div>
                                <div class="col-15 input-form">
                                        <select class="form-control" name="number_bedroom">
                                            <option value="0">Phòng ngủ</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                            <option value="6">6</option>
                                            <option value="7">6+</option>
                                        </select>
                                    </div>
                                    <div class="col-15 input-form">
                                        <select class="form-control" name="number_bathroom">
                                            <option value="0">Phòng tắm</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                            <option value="6">6</option>
                                            <option value="7">6+</option>
                                        </select>
                                    </div>
                                    <div class="col-15 input-form">
                                        <select class="form-control price_ranger" name="minimum_price">
                                            <option value="0">-Giá tối thiểu-</option>
                                            <option value="50">$50</option>
                                            <option value="100">$100</option>
                                            <option value="200">$200</option>
                                            <option value="300">$300</option>
                                            <option value="400">$400</option>
                                            <option value="500">$500</option>
                                            <option value="600">$600</option>
                                            <option value="700">$700</option>
                                            <option value="800">$800</option>
                                            <option value="900">$900</option>
                                            <option value="1000">$1000</option>
                                            <option value="1200">$1200</option>
                                            <option value="1400">$1400</option>
                                            <option value="1600">$1600</option>
                                            <option value="1800">$1800</option>
                                            <option value="2000">$2000</option>
                                            <option value="2200">$2200</option>
                                            <option value="2500">$2500</option>
                                            <option value="2800">$2800</option>
                                            <option value="3000">$3000</option>
                                            <option value="3500">$3500</option>
                                            <option value="4000">$4000</option>
                                            <option value="4500">$4500</option>
                                            <option value="5000">$5000</option>

                                        </select>
                                    </div>
                                    <div class="col-15 input-form">
                                        <select class="form-control price_ranger" name="maximum_price">
                                            <option value="99999999">-Giá tối đa-</option>
                                            <option value="100">$100</option>
                                            <option value="200">$200</option>
                                            <option value="300">$300</option>
                                            <option value="400">$400</option>
                                            <option value="500">$500</option>
                                            <option value="600">$600</option>
                                            <option value="700">$700</option>
                                            <option value="800">$800</option>
                                            <option value="900">$900</option>
                                            <option value="1000">$1000</option>
                                            <option value="1200">$1200</option>
                                            <option value="1400">$1400</option>
                                            <option value="1600">$1600</option>
                                            <option value="1800">$1800</option>
                                            <option value="2000">$2000</option>
                                            <option value="2200">$2500</option>
                                            <option value="2800">$2800</option>
                                            <option value="3000">$3000</option>
                                            <option value="3500">$3500</option>
                                            <option value="4000">$4000</option>
                                            <option value="4500">$4500</option>
                                            <option value="5000">$5000</option>
                                            <option value="6000">$6000</option>
                                            <option value="7000">$7000</option>
                                            <option value="8000">$8000</option>
                                        </select>
                                    </div>
                                <div class="welcome-hero-serch">
                                    <button type="submit" class="welcome-hero-btn" style="font-size:14px; height:34px;">
                                        <b>Tìm kiếm</b>  <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>

    </section><!--/.welcome-hero-->
    <!--works start -->
    <section id="works" class="works">
        <div class="container">
            <div class="section-header">
                <h2>Loremipsu là gì?</h2>
                <p>Nền tảng tiềm kiếm bất động sản tại thành phố Hồ Chí Minh</p>
            </div><!--/.section-header-->
            <div class="works-content">
                <div class="row">
                    <div class="col-md-4 col-sm-6">
                        <div class="single-how-works">
                            <div class="single-how-works-icon">
                                <i class="flaticon-lightbulb-idea"></i>
                            </div>
                            <h2><a href="#">Giao <span>tiếp với cộng đồng</span></a></h2>
                            <p>
                                Tự do trao đổi thông tin, liên lạc với các đối tác.
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6">
                        <div class="single-how-works">
                            <div class="single-how-works-icon">
                                <i class="flaticon-networking"></i>
                            </div>
                            <h2><a href="#">tìm <span> kiếm nhà ở</span></a></h2>
                            <p>
                                Bao gồm danh sách bất động sản
                                đồ sộ tha hồ cho bạn tiềm kiếm.
                            </p>

                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6">
                        <div class="single-how-works">
                            <div class="single-how-works-icon">
                                <i class="flaticon-building"></i>
                            </div>
                            <h2><a href="#">Cho <span>thuê bất động sản</span></a></h2>
                            <p>
                                Mua nhà, cho thuê nhà được thực hiện rất đơn giản với cú click chuột
                            </p>

                        </div>
                    </div>
                    <button class="welcome-hero-btn how" style="width:200px;" onclick="window.location.href='@Url.Action("Index","properties")'">
                        tiềm hiểu thêm
                    </button>
                </div>
            </div>
        </div><!--/.container-->

    </section><!--/.works-->
    <!--works end -->
    <!--explore start -->
    <section id="explore" class="explore">
        <div class="container">
            <div class="section-header">
                <h2>Hãy tham gia Loremipsu</h2>
                <p>Tận hưởng nhiều tín năng khác</p>
            </div>
            <br />
            <button class="welcome-hero-btn explore1" style="margin-right:20px;margin-left:370px;" onclick="window.location.href='@Url.Action("Register","Account",null)'">
                Tạo tài khoản
            </button>
            <button class="welcome-hero-btn explore1" style="margin-right:20px;margin-left:20px" onclick="window.location.href='@Url.Action("Login","Account",null)'">
                Đăng nhập
            </button>
        </div>
        <div>
            @RenderBody()
        </div>
    </section>
    <!-- statistics strat -->
    <section id="statistics" class="statistics">
        <div class="container">
            <div class="statistics-counter">
                <div class="col-md-3 col-sm-6">
                    <div class="single-ststistics-box">
                        <div class="statistics-content">
                            <div class="counter">30 </div> <span>+</span>
                        </div><!--/.statistics-content-->
                        <h3>posts</h3>
                    </div><!--/.single-ststistics-box-->
                </div><!--/.col-->
                <div class="col-md-3 col-sm-6">
                    <div class="single-ststistics-box">
                        <div class="statistics-content">
                            <div class="counter">65</div> <span>+</span>
                        </div><!--/.statistics-content-->
