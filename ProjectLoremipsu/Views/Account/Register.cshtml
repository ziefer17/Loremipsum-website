@model ProjectLoremipsu.Models.user

@{ ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    }

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-image: url(https://wallpapers.com/images/featured/high-resolution-gfinds1akzwf6vcq.jpg);
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        margin: 0;
        padding: 0;
    }

    .container-form {
        width: 400px;
        background-color: rgba(255, 255, 255, 0.9);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        border-radius: 15px;
        margin: 80px auto;
        padding: 20px 30px;
        text-align: center;
    }

        .container-form h2 {
            font-size: 24px;
            color: #333;
            font-weight: bold;
            margin-bottom: 20px;
        }

    .form-group {
        padding-left: 50px;
        margin-bottom: 20px;
        text-align: left;
    }

        .form-group label {
            font-size: 14px;
            color: #555;
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
        font-size: 14px;
    }

        .form-control:focus {
            border-color: #4caf50;
            box-shadow: 0 0 8px rgba(76, 175, 80, 0.5);
        }

    .btn-default {
        background-color: #4caf50;
        color: white;
        font-size: 16px;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-default:hover {
            background-color: #45a049;
        }

    .input-item {
        margin-top: 20px;
    }

        .input-item a {
            color: #007bff;
            font-size: 14px;
            text-decoration: none;
        }

            .input-item a:hover {
                text-decoration: underline;
            }

    h5 {
        font-size: 14px;
        color: red;
        margin-top: 10px;
    }
</style>

<div class="container-form">

    <h2>Đăng ký</h2>

    @using (Html.BeginForm())
    {
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="form-group">
                        <label>Tên đăng ký</label>
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "Tên của bạn là bắt buộc*", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.email, "Email là bắt buộc*", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Số điện thoại</label>
                        @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.phone, "Số điện thoại là bắt buộc*", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Mật khẩu</label>
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.password, "Mật khẩu là bắt buộc", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Nhập lại mật khẩu</label>
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" style="text-align:center;padding-right:32px">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>}

    <h5>@ViewBag.Message</h5>

    <div class="input-item">
        <span>Đã có tài khoản? </span>
        @Html.ActionLink("Đăng nhập ngay", "Login")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
