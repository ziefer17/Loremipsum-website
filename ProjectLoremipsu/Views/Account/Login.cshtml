@model ProjectLoremipsu.Models.user

@{ ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-image: url('../../Content/image/background.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        margin: 0;
        padding: 0;
    }

    .container-form {
        width: 400px;
        background-color: rgba(255, 255, 255, 0.9);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        border-radius: 15px;
        margin: 100px auto;
        padding: 20px;
        text-align: center;
    }

        .container-form h2 {
            color: #333;
            margin-bottom: 20px;
            font-weight: bold;
        }

    .form-group {
        padding-left: 50px;
        margin-bottom: 20px;
        text-align: left;
    }

        .form-group label {
            font-weight: bold;
            color: #555;
            margin-bottom: 5px;
            display: block;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
    }

        .form-control:focus {
            border-color: #4caf50;
            box-shadow: 0 0 8px rgba(76, 175, 80, 0.5);
        }

    .checkbox-item {
        display: flex;
        align-content: space-between;
    }

    .checkbox {
        display: flex;
    }

    .Qmk {
        padding-top: 7px;
        margin-top: 0;
        margin-bottom: 0;
    }

        .Qmk a {
            color: #007bff;
            font-size: 14px;
            text-decoration: none;
        }

            .Qmk a:hover {
                text-decoration: underline;
                cursor: pointer;
            }

    .btn-default {
        background-color: #4caf50;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-default:hover {
            background-color: #45a049;
        }

    .input-item {
        margin-top: 20px;
    }

        .input-item a {
            color: #007bff;
            text-decoration: none;
            font-size: 14px;
        }

            .input-item a:hover {
                text-decoration: underline;
            }
</style>
<div class="container-form">
    <h2>Đăng nhập</h2>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-horizontal">


            <div class="form-group">
                <label>Email</label>
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Mật khẩu</label>
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group" style="text-align:center;padding-right:32px">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    }

    <div class="input-item">
        <span>Chưa có tài khoản? </span>
        @Html.ActionLink("Đăng ký ngay", "Register", new { @class = "register-link" })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



